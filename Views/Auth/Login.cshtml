@model Balkhanakovv.WebStorage.ViewModels.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Balkhanakovv.WebStorage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/signin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Balkhanakovv.WebStorage.styles.css" asp-append-version="true" />
</head>
<body class="text-center">
    <main class="form-signin">
        <form asp-action="Login" asp-controller="Auth" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-floating">                    
                    <input type="text" asp-for="Name" class="form-control" placeholder="Имя пользователя"/>
                    <label asp-for="Name">Введите имя</label>
                    <span asp-validation-for="Name" />
                </div>
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" placeholder="Введите пароль"/>                    
                    <label asp-for="Password">Введите пароль</label>
                    <span asp-validation-for="Password" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Войти" class="btn btn-outline-dark" />
                </div>
            </div>
        </form>
    </main>
</body>
</html>