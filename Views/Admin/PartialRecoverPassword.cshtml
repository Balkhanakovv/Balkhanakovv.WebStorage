@using Balkhanakovv.WebStorage.Models.DB
@inject Balkhanakovv.WebStorage.Models.DB.WebStorageContext _db

@{
    List<User> users = new();

    foreach (var item in _db.ForgottenPasswords)
    {
        users.Add(_db.Users.Where(x => x.Id == item.Id && item.IsRestored)?.FirstOrDefault());
    }
}

<div id="recoveryPasswordContainer">
    <form>
        <div class="form-floating">
            <label>Выберите пользователя</label><br />
            <select class="form-select">
                @foreach (var item in users)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>

        <div>
            <button type="button" class="btn" onclick="
                    $.ajax({
                        url: '@Url.Action("Register", "Auth")',
                        method: 'post',
                        data: data,
                        cache: false,
                        success: function (e) {
                            $('#registerContainer').html(e);
                        }
                   });
               ">
                Зарегистрировать
            </button>
        </div>
    </form>
</div>
