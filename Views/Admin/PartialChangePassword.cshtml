@model Balkhanakovv.WebStorage.ViewModels.ChangePasswordModel
<div class="validation" asp-validation-summary="ModelOnly"></div>
<form id="changePasswdForm">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-floating">
            <input asp-for="OldPassword" type="password" class="form-control" placeholder="Старый пароль" />
            <label asp-for="OldPassword">Введите старый пароль</label>
            <span asp-validation-for="OldPassword" />
        </div>

        <div class="form-floating">
            <input asp-for="NewPassword" type="password" class="form-control" placeholder="Новый пароль" />
            <label asp-for="NewPassword">Введите новый пароль</label>
            <span asp-validation-for="NewPassword" />
        </div>

        <div class="form-floating">
            <input asp-for="RepeatPassword" type="password" class="form-control" placeholder="Повторите пароль" />
            <label asp-for="RepeatPassword">Повторите новый пароль</label>
            <span asp-validation-for="RepeatPassword" />
        </div>

        <div class="form-group">
            <input id="UpdatePasswordButton" onclick="changePasswd()" type="submit" value="Применить" class="btn btn-outline-dark" />
        </div>
    </div>
</form>



